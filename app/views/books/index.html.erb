<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user_id) do %>
            <%= image_tag book.user.get_profile_image %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.user_id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td>
        <%= link_to book_path(book.user_id) do %>
            <%= book.body %>
        <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

