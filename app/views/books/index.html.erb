<%= render 'users/info', user: @user %>

<%= render 'newbook', book: @book %>

<h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user_id) do %>
            <%= image_tag book.user.get_profile_image %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.user_id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td>
        <%= link_to book_path(book.user_id) do %>
            <%= book.body %>
        <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

