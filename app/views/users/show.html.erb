<h2>User info</h2>

<div>
  <%= image_tag @user.get_profile_image %>
</div>

<table>
  <body>
  <tr>
    <th>name</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= @user.introduction %></td>
  </tr>
  </tbody>
</table>

<div>
  <%= link_to edit_user_path do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>