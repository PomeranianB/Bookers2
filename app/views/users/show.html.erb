<%= render 'info', user: @user %>

<%= render 'books/newbook', book: @book %>

<h2>Books</h2>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <tr>
     <% @books.each do |book| %>
    <td>
      <%= image_tag @user.get_profile_image %>
    </td>
    <td>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    </td>
    <td>
      <%= book.body %>
    </td>
    <% end %>
  </tr>
</table>