<div>
<%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'info', user: @user %>
      <%= render 'books/newbook', book: @book %>

    </div>


  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table">
      <thread>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      </thread>
      <tbody>
        <% @books.each do |book| %>
        <tr>
        <td>
          <%= link_to user_path(book.user_id) do %>
            <%= image_tag book.user.get_profile_image %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
            <% book.title %>
          <% end %>
        </td>
        <td>
          <%= book.body %>
        </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>