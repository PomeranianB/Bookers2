<h2>User info</h2>

<div>
  <%= image_tag user.get_profile_image %>
</div>

<table class="table">
  <tbody>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
  </tbody>
</table>

<div class="row">
  <%= link_to edit_user_path(user), class: "btn btn-block btn-outline-secondary" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>