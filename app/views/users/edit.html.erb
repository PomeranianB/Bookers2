<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <p>Name</p>
  <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
  <p>Image</p>
  <%= f.file_field :profile_image, accept: "image/*" %>  
  <p>Introduction</p>
   <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %><br>
  <%= f.submit 'Update User' %>
<% end %>