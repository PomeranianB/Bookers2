<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

    <h2>User info</h2>
    <%= render 'layouts/error', obj: @user %>
    <%= form_with model: @user do |f| %>
      <p>Name</p>
      <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %><br>
      <p>Image</p>
      <%= f.file_field :profile_image, accept: "image/*" %>  
      <p>Introduction</p>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class: "form-control" %><br>
      <%= f.submit 'Update User', class: "btn btn-secondary"  %>
    <% end %>
  </div>
</div>