<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/ffdbf495c1.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to user_path(current_user.id) do %>
                <i class="fa-solid fa-house">Home</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path do %>
                <i class="fa-solid fa-users">Users</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to books_path do %>
                <i class="fas fa-book-open">Books</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt">Log out</i>
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to root_path do %>
                <i class="fa-solid fa-house">Home</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to about_path do %>
                <i class="fas fa-link">About</i> 
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path do %>
                <i class="fa-solid fa-user-plus">Sign up</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path do %>
                <i class="fa-solid fa-right-to-bracket">Log in</i>
              <% end %>
            </li>
          <% end %>
        </div>
        </div>
      </nav>
    </header>
    <%= yield %>

    <footer>
      <p class="text-center">CopyRight Infratop.inc</p>
    </footer>
    
  </body>
</html>